<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tool.whosdomainname.android.MainActivity">
    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收益计算："
        android:textSize="16sp"
        android:textColor="#333333"/>

    <TextView android:id="@+id/text1"
        android:layout_below="@+id/title"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如果是12345元，按照每年4%（0.04）收益，存10年，计算收益的话，请在下面依次填入12345，0.04，10"
        android:textSize="14sp"
        android:textColor="#999999"/>
    <EditText android:id="@+id/yuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:hint="12345"
        android:textSize="14sp"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"/>
    <EditText android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/yuan"
        android:paddingTop="5dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:hint="0.04"
        android:textSize="14sp"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"/>
    <EditText android:id="@+id/years"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/rate"
        android:paddingTop="5dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:hint="10"
        android:textSize="14sp"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"/>
    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/years"
        android:paddingTop="5dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:text="显示结果"/>
</RelativeLayout>
